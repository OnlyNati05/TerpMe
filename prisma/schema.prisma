generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Page {
  id  Int @id @default(autoincrement())
  url String @unique
  lastScraped DateTime? 
  status String?
  contentHash String?
  lastIndexAt DateTime?
  chunkCount Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}